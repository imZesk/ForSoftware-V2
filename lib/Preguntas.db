CREATE TABLE pregunta (
  id INTEGER PRIMARY KEY AUTOINCREMENT NOT NULL,
  tipo_pregunta INTEGER NOT NULL,
  pregunta TEXT NOT NULL,
  opciones TEXT NOT NULL,
  respuesta TEXT NOT NULL
);


